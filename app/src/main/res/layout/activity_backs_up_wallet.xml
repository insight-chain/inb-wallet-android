<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/root_view_activity_backs_up_wallet">
    <include layout="@layout/layout_topbar_common"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="@color/c_303030"
        android:text="@string/account_name_wallet_detail_activity"/>
    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/icon_bg_et_color_f6f7f9"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textSize="15sp"
        android:textColor="@color/c_999999"
        android:text="Insight Chain 123"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="@color/c_303030"
        android:text="@string/private_key"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_wallet_private_key"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/icon_bg_et_color_f6f7f9_higher"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="15dp"
            android:gravity="top|start"
            android:includeFontPadding="false"
            android:textSize="15sp"
            android:textColor="@color/c_999999"
            android:text="Insight Chain 123"/>
        <ImageView
            android:id="@+id/iv_copy_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_wallet_private_key"
            android:layout_alignBottom="@id/tv_wallet_private_key"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/icon_bg_copy"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/c_f6f7f9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bg_horn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textColor="@color/c_3574fa"
            android:text="@string/hint1_backs_up_wallet_activity"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_bg_horn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:textColor="@color/c_3574fa"
            android:text="@string/hint2_backs_up_wallet_activity"/>
    </LinearLayout>

</LinearLayout>