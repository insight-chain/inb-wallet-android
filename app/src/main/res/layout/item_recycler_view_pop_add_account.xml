<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/root_view_item_recycler_view_pop_add_account">
    <ImageView
        android:id="@+id/iv_circle_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_default_head_img_circle_blue"
        />
    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/c_303030"
        android:includeFontPadding="false"
        android:layout_toRightOf="@id/iv_circle_head"
        android:layout_alignTop="@id/iv_circle_head"
        android:layout_marginLeft="10dp"
        android:text="待机"/>
    <TextView
        android:id="@+id/tv_account_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_999999"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:layout_alignBottom="@id/iv_circle_head"
        android:layout_alignLeft="@id/tv_account_name"
        android:text="abcdefghijklmnopqrstuvwxyzabcdefghijklmn"
        android:ellipsize="end"
        android:lines="1"
        android:maxWidth="210dp"
        />
    <CheckBox
        android:id="@+id/cb_item_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:enabled="false"
        android:button="@drawable/selector_right_checkbox"
        />
    <View
        android:id="@+id/view_division_item_add_account"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_eeeeee"
        android:layout_below="@id/iv_circle_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>